{
    "connector": {
      "name": "local",
      "options": {
        "pattern": [
          "**",
          "!.git/**",
          "!node_modules/**"
        ]
      }
    },
    "extends": [
      "development"
    ],
    "formatters": [
      "stylish"
    ],
    "hints": [
